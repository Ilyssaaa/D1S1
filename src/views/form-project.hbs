    </nav>
    <!-- Navbar end -->

    <!-- FORM -->
    <h3 class="text-center mt-5">Post New Project</h3>
    <form class="container" method="post" action="form-project">

      <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Project Name</label>
        <input type="text" class="form-control" id="projectName" name="projectName" placeholder="Title">
      </div>

      <div class="row">
        <div class="col">
          <label for="date">Start Date</label>
          <input type="date" class="form-control" id="startDate" name="startDate">
        </div>
        <div class="col">
          <label for="date">End Date</label>
          <input type="date" class="form-control" id="endDate" name="endDate">
        </div>
      </div>

      <div class="form-floating mt-3">
        <textarea class="form-control" id="content" name="content" style="height: 200px; resize: none;"></textarea>
        <label for="content">Your Description</label>
      </div>

      <div class="tech mt-3">
        <p>Technologi</p>
      </div>

      <div class="btn-group d-flex mt-3" role="group" aria-label="Basic checkbox toggle button group">
        
        <input type="checkbox" class="btn-check" value="nodeJs" id="nodeJs" name="nodeJs" autocomplete="off">
        <label class="btn btn-outline-primary" for="nodeJs">Node.JS</label>
      
        <input type="checkbox" class="btn-check" value="javascript" id="javascript" name="javascript" autocomplete="off">
        <label class="btn btn-outline-primary" for="javascript">Javascript</label>

        <input type="checkbox" class="btn-check" value="react" id="react" name="react" autocomplete="off">
        <label class="btn btn-outline-primary" for="react">Reacj.JS</label>
      
        
        <input type="checkbox" class="btn-check" value="php" id="php" name="php" autocomplete="off">
        <label class="btn btn-outline-primary" for="php">PHP</label>
      </div>

      <div class="input-group mt-3">
        <input type="file" value="image" class="form-control" id="image" name="image">
      </div>
      
      <div class="d-grid justify-content-md-end mt-3">
        <button class="btn btn-primary px-5" type="submit">Submit</button>
      </div>

    </form>

    <!-- FORM END -->

